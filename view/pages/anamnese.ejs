                            <input class="form-check-input" type="checkbox" name="patologia" id="coracao" value="Problemas do Coração">
                            <label class="form-check-label" for="patologia">
                              Problemas do Coração
                            </label>
                            </div>
                            
                            <div class="pat-item">
                            <input class="form-check-input" type="checkbox" id="pulmonares" name="patologia" value="Problemas pulmonares">
                            <label class="form-check-label" for="patologia">
                              Problemas pulmonares
                            </label>
