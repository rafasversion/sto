            <li><a class="nav-link" href="/">Histórico</a></li>
          </ul>
        <% if(status == "loggedin") {%> 

          <div class="dropdown">
           <span><span class="fa fa-user"></span> Perfil <span class="fa fa-caret-down" id="aa"></span><span class="fa fa-caret-up" id="bb"></span></span>
           <div class="dropdown-content">
            <a class="nav-link" id="dc1" href="/profile">Ver perfil</a>
            <a class="nav-link" id="dc2" href="/">Configurações</a>
            
            <div class="d-grid gap-2">
              <button class="btn btn-outline-danger" id="sair"><a href="/logout" class="logout"><span class="fa fa-sign-out"></span>Sair</a></button>
            </div>
           </div>
          </div>
          <% } else { %> 
            <a class="nav-link" href="/login"><span class="fa fa-sign-in"></span> Login</a>
